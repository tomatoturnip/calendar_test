<div class="row">
  <div class="col-md-12">
    <h2>Messages</h2>
  </div>
  <div class="row">
    <div class="col-md-10">

      <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>Speaker</th>
            <th>Topic</th>
            <th>Date</th>
            <th>Listen</th>
            <th>Download</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <% if @sermons.present? %>
        <tbody id="sermon">
          <%= render 'sermon' %>
        <% end %>
        </tbody>
      </table>

      <%= link_to "Add a message", new_sermon_path, class: "btn btn-default btn-sm" %>
      <br />
      <br />
      <%= link_to "Back", root_path, class: "btn btn-default btn-sm" %>
    </div>
  </div>
