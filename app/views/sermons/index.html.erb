<h1>Messages</h1>

<table class="table table-bordered table-striped datatable">
  <thead>
    <tr>
      <th>Speaker</th>
      <th>Topic</th>
      <th>Date</th>
      <th>Listen</th>
    </tr>
  </thead>
  <% if @sermons.present? %>
  <tbody id="sermon">
    <%= render 'sermon' %>
  <% end %>
  </tbody>
</table>

<div id="paginator">
  <%= paginate @sermons, remote: true %>
</div>
<br />
<%= link_to "Add a message", new_sermon_path, class: "btn btn-default btn-sm" %>
<br />
<br />
<%= link_to "Back", root_path, class: "btn btn-default btn-sm" %>

