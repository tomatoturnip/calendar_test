<%= simple_form_for [:admin, @user], html: { class: "form-vertical" } do |f| %>
  <%= f.input :email, label: false, placeholder: 'email' %>
  <%= f.input :role, as: :select, collection: User::ROLES, label: false, placeholder: 'role', include_blank: false %>
  <%= f.input :approved, as: :select, label: false, placeholder: 'approved status' %>

  <%= f.button :submit, label: 'Update user', class: 'btn btn-primary' %>
<% end %>
